<div class="site-header">
  <div class="header-wapper">
    
    <!-- LEFT: MENU + SEARCH -->
    <div class="header-search-flex">
      <button class="menu-toggle" aria-label="Toggle menu">
         <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line class="line1" x1="3" y1="6" x2="21" y2="6"/>
            <line class="line2" x1="3" y1="12" x2="21" y2="12"/>
            <line class="line3" x1="3" y1="18" x2="21" y2="18"/>
         </svg>
      </button>


      <predictive-search class="block-search-from">
        <div class="header-search">
          <form action="{{ routes.search_url }}" method="get" class="search-form">
            <div class="search-box">

              <input
                type="search"
                name="q"
                placeholder="What are you looking for?"
                class="search-input"
              >

              <button type="submit" class="header-btn">
                <svg xmlns="http://www.w3.org/2000/svg"
                  width="18" height="18"
                  fill="none" stroke="currentColor"
                  stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  viewBox="0 0 24 24">
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
              </button>

              <button type="button" id="clear-search" class="clear-btn" style="display:none;">
                ×
              </button>

            </div>
          </form>
        </div>
      </predictive-search>

    </div>

    <!-- MIDDLE: STORE NAME -->
    <div class="header-store">
      <a href="{{ routes.root_url }}" class="store-name">
        {{ shop.name }}
      </a>
    </div>

    <!-- RIGHT: ACCOUNT + CART -->
    <div class="header-icon-flex">
      <div class="header-icons">

        <a href="{{ routes.account_url }}" class="icon-btn">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="20" height="20" fill="none"
            stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round"
            viewBox="0 0 24 24">
            <path d="M20 21a8 8 0 1 0-16 0" />
            <circle cx="12" cy="7" r="4" />
          </svg>
        </a>

        <a href="{{ routes.account_login_url }}" class="signin-text">
          Sign in / Register
        </a>

        <a href="{{ routes.cart_url }}" class="icon-btn">
          <svg xmlns="http://www.w3.org/2000/svg"
            width="20" height="20" fill="none"
            stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round"
            viewBox="0 0 24 24">
            <circle cx="9" cy="21" r="1" />
            <circle cx="20" cy="21" r="1" />
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
          </svg>
        </a>

      </div>
    </div>

  </div>

  <!-- MENU BELOW HEADER -->
  <div class="header-bottom">
    <nav class="header-menu" role="navigation" aria-label="Main menu">
      <ul class="flex-wrap">
        {% assign current_url = request.path %}

        <li class="items-center">
          <a href="https://w5e0cw-u8.myshopify.com"
             class="menu-items {% if current_url == '/' %}active{% endif %}">
            <span class="reverset-link">SHOP</span>
            <span class="menu-arrow">
              <svg xmlns="http://www.w3.org/2000/svg"
                width="10" height="10" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </span>
          </a>
        </li>

        <li class="items-center">
          <a href="https://w5e0cw-u8.myshopify.com/brands"
             class="menu-items {% if current_url == '/brands' %}active{% endif %}">
            <span class="reverset-link">BRANDS</span>
            <span class="menu-arrow">
              <svg xmlns="http://www.w3.org/2000/svg"
                width="10" height="10" viewBox="0 0 24 24"
                fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </span>
          </a>
        </li>

        <li class="items-center">
          <a href="https://w5e0cw-u8.myshopify.com/willness-hub"
             class="menu-items {% if current_url == '/willness-hub' %}active{% endif %}">
            <span class="reverset-link">WILLNESS HUB</span>
          </a>
        </li>

        <li class="items-center">
          <a href="https://w5e0cw-u8.myshopify.com/review-reward"
             class="menu-items {% if current_url == '/review-reward' %}active{% endif %}">
            <span class="reverset-link">REVIEW & REWARD</span>
          </a>
        </li>

        <li class="items-center">
          <a href="{{ routes.root_url }}/best-deals"
             class="menu-items {% if current_url == '/best-deals' %}active{% endif %}">
            <span class="reverset-link best-deals">
              BEST DEALS
              <span class="star top-left">◆</span>
              <span class="star top-right">◆</span>
              <span class="star bottom-right">◆</span>
            </span>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</div>

