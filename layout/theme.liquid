<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ page_title }}</title>
        {{ 'theme.css' | asset_url | stylesheet_tag }}
        {{ 'top-bar.css' | asset_url | stylesheet_tag }}
        {{ 'header.css' | asset_url | stylesheet_tag }}
        {{ content_for_header }}
        <script>
             tailwind.config = {
             prefix: 'tw-',
             corePlugins: { preflight: false },
                };
        </script>

        <!-- Tailwind CDN minify + defer = load mượt -->
        <script src="https://cdn.tailwindcss.com?min" defer></script>
    </head>
    <body>
        {% section 'top-bar' %}
        {% section 'header' %}
        {{ content_for_layout }}
        {% section 'featured' %}
        {% section 'category' %}
        {% section 'product' %}
        <script defer src="{{ 'header.js' | asset_url }}"></script>
    </body>
</html>